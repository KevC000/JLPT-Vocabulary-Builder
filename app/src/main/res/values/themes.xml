<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JLPTVocabularyBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_japan</item>
        <item name="colorPrimaryVariant">@color/red_japan_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--   Level selections text in quiz selector fragment-->
    <style name="level_selection_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>
    </style>

    <!--    For specs of vocabs list or quiz-->
    <style name="quiz_specifications_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--    For specs of vocabs list or quiz but grey text not black-->
    <style name="quiz_specifications_text_nonblack">
        <item name="android:textSize">16sp</item>
    </style>

    <!--    For the instructions in the quiz selector menu-->
    <style name="instructions">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--    Screen backgrounds for this app   -->
    <style name="screens">
        <item name="android:background">@color/red_japan_2</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Text style for stats in items in the vocabulary list-->
    <style name="vocab_item_stat">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>

    </style>

    <!-- Text style for kanji in the items in the vocabulary list-->
    <style name="vocab_item_kanji">

        <item name="android:textColor">@color/red_japan</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>

    </style>


</resources>